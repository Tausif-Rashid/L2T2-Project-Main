<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <title>Document</title>
    <style>
        div.scroll {
            Width: 5px;
            Height: 10 px;
            Overflow-x: scroll;
            Overflow-y: scroll;
        }
    </style>
</head>

<body>
    <div class="dropdown text-center " style="height: auto; width: 100%; margin-top: 30px; margin-bottom: 30px;">

        <button class="btn btn-secondary" type="button" id="allCourses" style="margin-right: 20px; margin-left: 20px;">
            All Courses
        </button>
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1"
            data-bs-toggle="dropdown" aria-expanded="false" style="margin-right: 20px; margin-left: 20px;">
            Term-Wise
        </button>
       <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton1">
            <% level_terms.rows.forEach(term=> { %>
                <li><a class="dropdown-item levelTermWiseCourseSharedAnchor" href="#">
                        <%= term.LEVEL_TERM %>
                    </a></li>
                <% }); %>
        </ul>

        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1"
            data-bs-toggle="dropdown" aria-expanded="false" style="margin-right: 20px; margin-left: 20px;">
            Session_Wise
        </button>
        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton1">
            <% sessions.rows.forEach(sessionName=> { %>
                <li><a class="dropdown-item sessionWiseCourseSharedAnchor" href="#">
                        <%= sessionName.SESSION_NAME %>
                    </a></li>
                <% }); %>
        </ul>
        <div class="table-responsive text-center bg-transparent container div-scroll"
            style=" height: auto; width : auto; margin-top: 20px;" id="div2">
        </div>
    </div>
</body>
<script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.js"></script>

</html>